@model IEnumerable<Tarefa>

<div class="row">
    <!-- DIV DE SELECIONAR FILTROS -->
    <div class="col-md-2">
        <form asp-action="Filtrar" asp-controller="Home" method="post">
            <div class="mb-3">
                <label class="form-label">Categoria:</label>
                <select name="categoriaFiltro"
                        class="form-select"
                        asp-items="@(new SelectList(ViewBag.Categorias, "CategoriaId", "Nome", ViewBag.Filtros.CategoriaId))">
                    <option value="todos">Todos</option>
                </select>
            </div>

            <div class="mb-3">
                <label class="form-label">Data de Vencimento:</label>
                <select name="vencimentoFiltro"
                        class="form-select"
                        asp-items="@(new SelectList(ViewBag.VencimentoValores, "Key", "Value", ViewBag.Filtros.Vencimento))">
                    <option value="todos">Todos</option>
                </select>
            </div>

            <div class="mb-3">
                <label class="form-label">Situação:</label>
                <select name="statusFiltro"
                        class="form-select"
                        asp-items="@(new SelectList(ViewBag.Status, "StatusId", "Nome", ViewBag.Filtros.StatusId))">
                    <option value="todos">Todos</option>
                </select>
            </div>

            <button type="submit" class="btn btn-primary">Filtrar</button>
            <a asp-action="Index" asp-route-id="" class="btn btn-primary">Limpar</a>
        </form>
    </div>

    <!-- DIV DAS TABELAS -->
    <div class="col-md-10">
        <form asp-action="MarcarCompleto" method="post">
            <table class="table table-bordered table-striped mt-2">
                <thead>
                    <tr>
                        <th>Descrição</th>
                        <th>Categoria</th>
                        <th>Data de vencimento</th>
                        <th>Status</th>
                        <th class="w-25"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var tarefa in Model)
                    {
                        
                        string categoriaNome = tarefa.Categoria != null ? tarefa.Categoria.Nome : "Não especificado";
                        string statusNome = tarefa.Status != null ? tarefa.Status.Nome : "Não especificado";
                        string atrasado = tarefa.Atrasado ? "bg-warning" : "";

                        <tr>
                            <td>@tarefa.Descricao</td>
                            <td>@categoriaNome</td>
                            <td class="@atrasado">@tarefa.DataDeVencimento?.ToShortDateString()</td>
                            <td class="@atrasado">@statusNome</td>
                            <td>
                                @if (tarefa.StatusId == "aberto")
                                {
                                    <button type="submit" class="btn btn-primary btn-sm" 
                                            name="tarefaId" 
                                            value="@tarefa.Id">
                                        Completar
                                    </button>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </form>

        <form asp-action="DeletarCompletos" method="post">
            <a asp-action="Adicionar" asp-controller="Home" class="btn btn-success">Adicionar Tarefa</a>
            <button type="submit" class="btn btn-danger">Deletar Tarefas Completas</button>
        </form>
    </div>
</div>
